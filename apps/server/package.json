{
  "name": "dayan_backend",
  "version": "0.0.1",
  "scripts": {
    "start": "ts-node --transpile-only src/server",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --respawn src/server",
    "up": "docker compose up -d",
    "down": "docker compose down",
    "reset_db": "rm -rf ./data/*",
    "studio": "npx prisma studio",
    "generate": "npx prisma generate",
    "format": "npx prisma format",
    "seed": "npx prisma db seed",
    "reset": "npx prisma migrate reset --skip-seed",
    "push": "npx prisma db push",
    "ws": "open http://localhost:3000/ws"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@prisma/client": "^5.16.2",
    "bad-words": "^3.0.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^3.10.0",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-fields": "^2.0.3",
    "graphql-redis-subscriptions": "^2.6.1",
    "graphql-scalars": "^1.23.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^16.0.2",
    "graphql-ws": "^5.16.0",
    "ioredis": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "make-dir": "^5.0.0",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "shortid": "^2.2.16",
    "tslib": "^2.6.3",
    "type-graphql": "^2.0.0-rc.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@ts-safeql/eslint-plugin": "^3.3.1",
    "@types/bad-words": "^3.0.3",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/graphql-fields": "^1.3.9",
    "@types/graphql-upload": "^16.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.6",
    "@types/node-cron": "^3.0.11",
    "@types/shortid": "^0.0.32",
    "@types/ws": "^8.5.11",
    "eslint": "^8.56.0",
    "eslint-config-universe": "^13.0.0",
    "prisma": "^5.16.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typegraphql-prisma": "^0.27.2",
    "typescript": "~5.3.3"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "eslintConfig": {
    "extends": [
      "universe",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "@ts-safeql/eslint-plugin"
    ],
    "ignorePatterns": [
      "src/generated"
    ],
    "globals": {
      "__dirname": "readonly"
    },
    "rules": {
      "prettier/prettier": "error",
      "@ts-safeql/check-sql": [
        "error",
        {
          "connections": [
            {
              "connectionUrl": "postgresql://dayan_admin:ISH12312VYn@localhost:5432/dayan_db_dev",
              "migrationsDir": "./prisma/migrations",
              "targets": [
                {
                  "tag": "prisma.+($queryRaw|$executeRaw)",
                  "transform": "{type}[]"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSameLine": true,
    "semi": false,
    "trailingComma": "none",
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "arrowParens": "avoid"
  }
}
